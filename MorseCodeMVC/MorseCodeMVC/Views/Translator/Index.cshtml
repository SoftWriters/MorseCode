@model MorseCodeMVC.Models.ResultModel
@{
    ViewBag.Title = "Home Page";
}
<style type="text/css">
    .translate-header {
        position: relative;
        overflow: hidden;
        margin: 10px;
    }

    .result {
        position: relative;
        overflow: hidden;
        margin: 10px;
        font-family: 'Lucida Sans Typewriter', 'Lucida Console', monaco, 'Bitstream Vera Sans Mono', monospace;
        font-size: 14px;
        font-style: normal;
        font-variant: normal;
        font-weight: 400;
        line-height: 20px;
    }
    .field-validation-error { 
        color: red; 
        font-weight: bold;
        font-size: 14px;

    }
</style>
<div class="jumbotron">
    @using (Html.BeginForm("Index", "Translator", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            @Html.ValidationMessageFor(model => model.file)
            @Html.TextBoxFor(model => model.file, new { @name = "files", @class = "btn btn-primary", @type = "file", @id = "morseFile", @required = "required" })
            <input class="submit btn btn-primary" type="submit" value="Translate" />
        </div>

    }

    @if (Model != null)
    {
        <span class="translate-header">Translation Result: </span>
        <div class="result">
            <span style="white-space: pre-line">@Model.result</span>
        </div>

    }
</div>
